  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\api\\manage.py",
      "args": ["runserver"],
      "django": true
    },
    {
      "name": "Python: Django Test",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/api/manage.py",
      "args": ["test", "accounts"], //["test", "api"] if you want to run tests for the whole project else ["tests", "<module_name>"]
      "django": true
    },
    {
      "name": "Python: Django Check",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/api/manage.py",
      "args": ["check"],
      "django": true
    }
  ]
}
